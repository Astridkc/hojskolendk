---
import Text from "../components/Text.astro";
---

<div class="pt-20">
  <div class="bg-[var(--primary-color-blue)] text-[var(--primary-color-offwhite)] py-12 px-6 md:px-16">
    <!-- Middle section: Contact info + Logo + Links -->
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 items-center text-center Brødtekst text-sm md:text-base gap-10 md:gap-20 w-full">
      <!-- Left: Contact info -->
      <div class="space-y-2 md:text-left">
        <p>Rosenørns Allé 31</p>
        <p>1970 Frederiksberg</p>
        <p>Danmark</p>

        <p class="mt-4">Telefon: 7027 9007</p>
        <p>Mandag til Fredag // Kl. 10.00–16.00</p>
        <p>Mail: <a href="mailto:info@hojskolendk.dk" class="underline hover:opacity-80">info@hojskolendk.dk</a></p>
      </div>

      <!-- Center: Logo -->
      <div class="flex justify-center items-center">
        <img src="/images/logo.svg" alt="HøjskolenDK logo" class="w-32 md:w-40 h-auto" />
      </div>

      <!-- Right: Navigation links -->
      <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-1 gap-2 text-center md:text-right">
        <a href="https://www.hojskolendk.dk/" class="hover:underline">FAQ</a>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Job</a>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Bæredygtighed</a>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Rejsegarantifonden</a>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Fra tilmelding til afrejse</a>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Generelle bestemmelser</a>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Grupperejser for unge</a>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Rejs i sabbatår</a>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-[var(--primary-color-offwhite)] opacity-30 max-w-6xl mx-auto mt-10 mb-6"></div>

    <!-- Bottom section: horizontal on desktop, vertical on mobile -->
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-center md:justify-between items-center text-center Brødtekst text-xs md:text-sm gap-2 md:gap-4">
      <p>HØJSKOLENDK er medlem af Rejsegarantifonden.</p>
      <p>
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Handelsbetingelser</a> /
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Cookiepolitik</a> /
        <a href="https://www.hojskolendk.dk/" class="hover:underline">Data- & Privatlivspolitik</a>
      </p>
      <p>Copyright © HØJSKOLENDK 2022 • CVR 32491162</p>
    </div>
  </div>
</div>
